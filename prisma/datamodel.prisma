type TodoList {
    id: ID! @unique
    auth0id: String @unique
    createdAt: DateTime!
    description: String!
    ownedBy: [User!]! @relation(name: "OwnedBy")
    assignedTo: [User!]! @relation(name: "AssignedTo")
    todos: [Todo!]!
    completed: Boolean @default(value: "false")
    inTeam: Team 
}

type Todo {
    id: ID! @unique
    description: String!
    partOf: TodoList
    completed: Boolean @default(value: "false")
}

type User {
    id: ID! @unique
    createdAt: DateTime!
    name: String!
    todoListsOwned: [TodoList] @relation(name: "OwnedBy")
    todoListsAssigned: [TodoList] @relation(name: "AssignedTo")
    inTeam: Team 
}

type Team {
    id: ID! @unique
    teamName: String!
    members: [User!] 
    todoLists: [TodoList!] 
}
